<%= form_for(@member) do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
	<div class="row clearfix">
		<div class="col-md-12 column">
			<div class="row clearfix">
				<div class="col-md-12 column">
					<h3 class="text-info text-center">
						Update Your Information
					</h3>
					<form class="form-horizontal" role="form">
						<div class="form-group">
						  <div class="field">
              </div>
							 <label for="Last_Name" class="col-sm-2 control-label">Last Name</label>
							<div class="col-sm-10">
								<%= f.text_field :Last_Name, class: 'form-control'%>
								</input>
							</div>
						</div>
						<div class="form-group">
							 <label for="First_Name" class="col-sm-2 control-label">First Name</label>
							<div class="col-sm-10">
								<%= f.text_field :First_Name, class: 'form-control' %>
							</div>
						</div>
						<div class="form-group">
							 <label for="First_Name" class="col-sm-2 control-label">Company</label>
							<div class="col-sm-10">
								<%= f.text_field :Company, class: 'form-control' %>
							</div>
						</div>
						<div class="form-group">
							 <label for="First_Name" class="col-sm-2 control-label">TX Licence (If Applicable)</label>
							<div class="col-sm-10">
								<%= f.number_field :TX_License, class: 'form-control' %>
							</div>
						</div>
						<div class="form-group">
							 <label for="First_Name" class="col-sm-2 control-label">Street Address</label>
							<div class="col-sm-10">
								<%= f.text_area :Street1, class: 'form-control' %>
							</div>
						</div>
						<div class="form-group">
							 <label for="First_Name" class="col-sm-2 control-label">City</label>
							<div class="col-sm-10">
								<%= f.text_field :City, class: 'form-control' %>
							</div>
						</div>
						<div class="form-group">
							 <label for="First_Name" class="col-sm-2 control-label">State</label>
							<div class="col-sm-10">
								<%= f.text_field :State , class: 'form-control' %>
							</div>
						</div>
						<div class="form-group">
							 <label for="First_Name" class="col-sm-2 control-label">Zip Code</label>
							<div class="col-sm-10">
								<%= f.number_field :Zip , class: 'form-control' %>
							</div>
						</div>
						<div class="form-group">
							 <label for="First_Name" class="col-sm-2 control-label">Primary Phone Number</label>
							<div class="col-sm-10">
								<%= f.text_field :Main_Phone , class: 'form-control' %>
							</div>
						</div>
						<div class="form-group">
							 <label for="First_Name" class="col-sm-2 control-label">Primary Email (Used to Login)*</label>
							<div class="col-sm-10">
								<%= f.text_field :Main_Email , class: 'form-control' %>
							</div>
						</div>
						<div class="form-group">
							 <label for="First_Name" class="col-sm-2 control-label">Customer Type</label>
							<div class="col-sm-10">
								<%= f.text_field :Customer_Type , class: 'form-control' %>
							</div>
						</div>
					 <div class="actions">
            <%= f.submit %>
          </div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
  
<% end %>
